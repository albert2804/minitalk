NAME = minitalk.a

SRC =  client.c server.c

COMPILED = $(SRC:.c=.o) 

all: $(NAME)

%.o : %.c
	cc -Wall -Wextra -Werror -I header -L bib -l ft $^ -o $@
#	cc -Wall -Wextra -Werror -I header -c -Lbib -llibft.a $^
$(NAME): $(COMPILED)
	@ar -rucv $(NAME) $^

clean:
	rm -f $(COMPILED)

fclean: clean
	rm -f $(NAME)
	
re: fclean $(NAME)

.PHONY: clean fclean re bonus